

# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,py}]
charset = utf-8

# 4 space indentation
[*.{go,rs,py}]
indent_style = space
indent_size = 4

# Indentation override for all JS
[*.js]
indent_style = space
indent_size = 2

; CSharp
[*.cs]
indent_size = 4
charset = utf-8-bom

[Makefile]
insert_final_newline = true
indent_style = tab
indent_size = 4

[*.md]
insert_final_newline = true
indent_style = tab
indent_size = 4

[*.yml]
indent_style = space
indent_size = 2
